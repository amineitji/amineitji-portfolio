.custom-close-button {\n  border-radius: 10%;\n  background-color: #ff5c5c;\n  color: white;\n  border: none;\n  width: 40px;\n  height: 40px;\n  font-size: 1.5rem;\n  position: absolute;\n  top: 10px;\n  right: 10px;\n  cursor: pointer;\n  transition: background-color 0.3s ease;\n  display: flex;\n  align-items: center;\n  justify-content: center;\n}\n\n.custom-close-button:hover {\n  background-color: #ff1c1c;\n}\n\n/* Centrer le contenu */\n.modal-header,\n.modal-body {\n  display: flex;\n  flex-direction: column;\n  align-items: center;\n  text-align: center;\n}\n\n/* Modal plus large */\n.modal-dialog.modal-xl {\n  max-width: 90%;\n}\n</style>\n"],"mappings":"AA+CA,eAAe;EACbA,IAAI,EAAE,mBAAmB;EACzBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,aAAa,EAAE,IAAI;MACnBC,WAAW,EAAE,CACX;QACEC,KAAK,EAAE,2EAA2E;QAClFC,QAAQ,EAAE,iBAAiB;QAC3BC,IAAI,EAAE,CACJ,0PAA0P,EAC1P;UAAE,KAAK,EAAE,iBAAiB;UAAE,KAAK,EAAE;QAAiB;QACpD;QAAA;MAEJ,CAAC,EACD;QACEF,KAAK,EAAE,gFAAgF;QACvFC,QAAQ,EAAE,eAAe;QACzBC,IAAI,EAAE,CACJ,4GAA4G,EAC5G;UAAEC,GAAG,EAAE,iCAAiC;UAAEC,GAAG,EAAE;QAAmB;MAEtE;MACA;MAAA;IAEJ,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,WAAWA,CAACH,GAAG,EAAE;MACf;MACA,OAAOA,GAAG,CAACI,UAAU,CAAC,MAAM,IAAIJ,GAAE,GAAIK,OAAO,CAAC,mBAAmBL,GAAG,EAAE,CAAC;IACzE,CAAC;IACDM,YAAYA,CAACC,KAAK,EAAE;MAClBA,KAAK,CAACC,MAAM,CAACR,GAAE,GAAI,iCAAiC,EAAE;IACxD,CAAC;IACDS,WAAWA,CAACC,KAAK,EAAE;MACjB,IAAI,CAACf,aAAY,GAAIe,KAAK;IAC5B,CAAC;IACDC,YAAYA,CAAA,EAAG;MACb,IAAI,CAAChB,aAAY,GAAI,IAAI;IAC3B;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}